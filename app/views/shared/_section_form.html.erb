<%= form_for(@section) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new section..." %>
  </div>
  <%= hidden_field_tag :document_id, @document.id %> 
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>