<%= form_for(@document) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 
 <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content,  :cols => "30", :rows => "10" %>
  </div>


  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>